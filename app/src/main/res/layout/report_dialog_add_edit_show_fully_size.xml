<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_card_view"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        android:padding="2dp"
        card_view:cardBackgroundColor="#e2e8ef"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:hint="Date">

                        <EditText
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:lines="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:textSize="18sp"
                            android:inputType="date"
                            />

                    </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_count_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Days count"
                    >

                    <EditText
                        android:id="@+id/tv_count_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:lines="1"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"
                        android:gravity="right"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>

            <include layout="@layout/report_raiting_bar_container"></include>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_report_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Report text">

                <EditText
                    android:id="@+id/tv_report_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:gravity="bottom"
                    android:layout_margin="8dp"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>







